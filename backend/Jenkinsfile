pipeline {
    agent {
        docker {
            image 'openjdk:22-jdk-slim'
        }
    }
    stages {
        stage('Build') {
            steps {
                script {
                    // Compile Java source files
                    sh 'javac -d bin src/medhead/Main.java'
                }
            }
        }
        stage('Package') {
            steps {
                script {
                    // Package compiled classes into a JAR file
                    sh 'jar cvf jar/backend.jar -C bin .'
                }
            }
        }
        stage('Dockerize') {
            steps {
                script {
                    // Build Docker image
                    sh 'docker build -t backend-app .'
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    // Run the JAR file
                    sh 'java -jar jar/backend.jar'
                }
            }
        }
    }
}