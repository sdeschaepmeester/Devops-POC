pipeline {
    agent any

    stages {
        stage('Check Workspace') {
            steps {
                script {
                    // Lister le contenu du répertoire pour déboguer
                    sh 'ls -la'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Changer de répertoire pour s'assurer que le Dockerfile est au bon endroit
                    dir('backend') {
                        // Construire l'image Docker
                        sh 'docker build -t backend-app .'
                    }
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Changer de répertoire pour s'assurer que le Dockerfile est au bon endroit
                    dir('backend') {
                        // Arrêter et supprimer le conteneur existant s'il y en a un
                        sh 'docker stop backend-container || true'
                        sh 'docker rm backend-container || true'
                        
                        // Exécuter le nouveau conteneur
                        sh 'docker run -d -p 8080:8080 --name backend-container backend-app'
                    }
                }
            }
        }
    }
}